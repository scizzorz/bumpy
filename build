#!/usr/bin/env python
import sys
from building import task, main, AbortException

@task()
def clean():
	'''Cleans the project.'''
	print 'clean()'

@task()
def compile():
	'''Compiles the project.'''
	print 'compile()'

@task(compile)
def run():
	'''Runs the project.'''
	print 'run()'

@task(run)
def stop():
	'''Stops the project.'''
	print 'stop()'

@task(compile)
def abort():
	'''Raises an AbortException to fail the build.'''
	print 'abort()'
	raise AbortException('Aborted.')

@task(abort)
def bad():
	'''A bad task.'''
	print 'bad()'

if __name__ == '__main__':
	main(sys.argv[1:])
